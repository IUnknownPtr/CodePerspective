<UserControl x:Class="XLibrary.TreePanelWPF"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300" Initialized="UserControl_Initialized">
    <Viewport3D Name="mainViewport" ClipToBounds="True">
        <Viewport3D.Camera>
            <PerspectiveCamera 
	  FarPlaneDistance="500"
	  LookDirection="-150,-150,-150"
	  UpDirection="0,1,0"
	  NearPlaneDistance="1" 
	  Position="150,150,150" 
	  FieldOfView="70" />
        </Viewport3D.Camera>
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <DirectionalLight 
	    Color="White" 
	    Direction="-2,-3,-1" />
            </ModelVisual3D.Content>
        </ModelVisual3D>
    </Viewport3D>
</UserControl>
